{
  "name": "@msb/api-client",
  "version": "1.0.0",
  "description": "JavaScript client library for MSB API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:browser",
    "build:browser": "esbuild src/index.ts --bundle --outfile=dist/browser.js --format=iife --global-name=MSBApi",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.19.0",
    "vitest": "^1.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./browser": "./dist/browser.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "keywords": [
    "api-client",
    "movies",
    "tracking",
    "javascript",
    "typescript"
  ]
}
